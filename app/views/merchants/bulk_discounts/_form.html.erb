<%= form_with model: bulk_discount, local: true do |f| %>
    <%= f.label :name %>
    <%= f.text_field :name %>

    <%= f.label :percent_discount %>
    <%= f.text_field :percent_discount %>

    <%= f.label :quantity_threshold %>
    <%= f.number_field :quantity_threshold %>

    <%= f.hidden_field :merchant_id, value: bulk_discount.merchant_id %>

    <%= f.submit "Save"%>
<% end %>