<p id="notice"><%= notice %></p>

<h1>Bulk Discounts</h1>

<table>
  <thead>
    <tr>
      <th>Percent discount</th>
      <th>Quantity threshold</th>
      <th>Merchant</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @bulk_discounts.each do |bulk_discount| %>
      <tr>
        <td><%= bulk_discount.percent_discount %></td>
        <td><%= bulk_discount.quantity_threshold %></td>
        <td><%= bulk_discount.merchant %></td>
        <td><%= link_to 'Show', bulk_discount %></td>
        <td><%= link_to 'Edit', edit_bulk_discount_path(bulk_discount) %></td>
        <td><%= link_to 'Destroy', bulk_discount, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

